<section id="data-list-view" class="data-list-view-header">
  @if (ViewBag.suc != null)
  {
      <span class="alert alert-success">@ViewBag.suc</span>
  }
  
  <!-- DataTable starts -->
  <div class="table-responsive">
    <table class="table data-list-view">
      <thead>
        <tr>
          <th></th>
          <th>ردیف</th>
