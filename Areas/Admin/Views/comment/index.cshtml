          <th>  تاریخ ثبت نظر</th>
          <th> عملیات</th>
        </tr>
      </thead>
      <tbody>
@if (ViewBag.nazarat != null)
{
  int i=0;
    @foreach (var item in ViewBag.nazarat)
{

    <tr>
          <td>
          
          </td>

          <td class="product-category">@i</td>
         
